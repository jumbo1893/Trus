<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/oranzova">
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabCurrentSeason"
            android:text="@string/tab_current_season"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabAllSeasons"
            android:text="@string/tab_all_seasons"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </com.google.android.material.tabs.TabLayout>

    <com.jumbo.trus.CustomViewPager
        android:id="@+id/statisticsPkflViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.jumbo.trus.CustomViewPager>


</LinearLayout>